<Window x:Class="DiabloCoETimerWPF.TimerLabel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiabloCoETimerWPF"
        mc:Ignorable="d"
        Title="TimerLabel" Height="108.238" Width="76.705"
        AllowsTransparency="True"
        WindowStyle="None"
        IsHitTestVisible="False">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Grid Background="#01000000" IsHitTestVisible="False">
        <Label Name="lblTimer" FontFamily="Arial" FontSize="40" Content="{Binding MainTimer}" Margin="10" HorizontalAlignment="Center" Foreground="{Binding MainTimerColor}" IsHitTestVisible="False"/>
    </Grid>
</Window>
